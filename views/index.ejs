<!-- Follow Church Sermons -->
<section class="sermon">
  <div class="container-fluid">
    <h1 class="pt-5 text-center about-txt">Never Miss A Sermon</h1>
    <div class="row p-5 pt-4 gy-4">
      <div class="col-md">
        <img src="<%= sermon.image.url %>" class="img-sermon img-fluid" alt="">
      </div>
      <div class="col-md sermon-font container px-3 text-dark">
        <% if(sermon !="" || "null" || "undefined" ) { %>
          <h6 class="fw-bold text-muted">
            <%= sermon.date %>
          </h6>
          <h3 class="fw-bold mb-3 about-txt text-dark">Title: <%= sermon.title %>
          </h3>
          <h5 class="about-txt text-dark ">Series: #<%=sermon.series %>
          </h5>

          <h6 class="fw-bold my-3 about-txt headerColor">Preacher: <%= sermon.preacher %>
          </h6>
          <p class="about-txt">
            <% if (sermon.sermon.length>501) { %>
              <%= sermon.sermon.slice(0, 500) + " ..." %>
                <% } else { %>
                  <%=sermon.sermon%>
                    <% } %>
          </p>

          <a href="/sermon" class="btn btn-outline about-txt">Read More</a>

          <% } else { %>
            <p>Sermon not uploaded. Check again later</p>
            <% } %>
      </div>
    </div>
  </div>
  </div>
</section>

